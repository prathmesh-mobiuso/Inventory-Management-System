import java.util.*;

public class VideoStore {
	
	static Video[] videoObject=new Video[10];
	static int a=0;
	
	public static String addVideo(String name) {	
		if(a<10) {		
		videoObject[a]=new Video(name,true,10);
		a++;
		return "Status :- '"+name +"' file added sucessfully";
		}
		else
		{
			return "Store inventory is full";
		}	
	}
	
	public static String checkOut(String name) {
		int fileFinder=0;
		for(int i=0;i<videoObject.length;i++) {
		if((videoObject[i])!=null) 
		{
				if((videoObject[i].title).equals(name))
				{
					fileFinder++;
					if(Video.beingCheckedOut(videoObject, i))
					{
						videoObject[i].availableFlag=false;
						return "Status :- '"+videoObject[i].title+"' file succesfully checkout";
						
					}
					else
					{
						return "Status :- '"+videoObject[i].title+"' file is out of stock";
					}					
				}
			}	
		}
		if(fileFinder==0) {
			return "No file found";
		}
		return null;
	}
	
	public static String returnVideo(String name) {
		int fileFinder=0;
		for(int i=0;i<videoObject.length;i++) {
		if(videoObject[i]!=null) 
		{
				if((videoObject[i].title).equals(name))
				{
					fileFinder++;
					if(Video.beingReturn(videoObject, i))
					{
						return "Status :- '"+videoObject[i].title+"' file succesfully returned";
						
					}
					else
					{
						return "Status :- '"+videoObject[i].title+"' is already present";
					}
				}
			}			
		}
		if(fileFinder==0) {
			return "No file found";
		}
		return null;
	}
	
	
	public static void receiveRating(String user,String name,double rating) {
		int fileFinder=0;
		for(int i=0;i<videoObject.length;i++) {
			if(videoObject[i]!=null) 
			{
					if((videoObject[i].title).equals(name))
					{
						fileFinder++;
						Video.receiveRating(videoObject, i, rating);
					}
			}
		}
		if(fileFinder==0) {
			System.out.println("No file found");
		}
	}
	
	public static void listInventory() {
		System.out.println("Printing the Inventory of the store :-");
		int index=1;
		
		for(int i=0;i<videoObject.length;i++) {
			
			if((videoObject[i]!=null) && (videoObject[i].availableFlag==true)) {
				System.out.println((index++)+". "+videoObject[i].title);
			}
		}
	}

}
